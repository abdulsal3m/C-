#include <iostream>
#include <iomanip>
using namespace std;

int main() {
  double total, c_tip;
  bool order;
  int resp1, resp2, resp3;
  order = true;
  total = 0;
  cout << "Welcome to Java Cafe!" << endl;
  while(order){
    cout << "----------------------------" << endl;
    cout << "What would you like today?" << endl;
    cout << "----------------------------" << endl;
    cout << "1. Coffee/Tea" << endl;
    cout << "2. Bagels/Toast" << endl;
    cout << "3. Donuts/Muffins/Donuts" << endl;
    cout << "4. Quit" << endl;
    cout << "Please choose one(1-4): ";
    cin >> resp1;
    if(resp1 == 1){
      cout << "----------------------------" << endl;
      cout << "What would you like?" << endl;
      cout << "1. Coffee $5.00" << endl;
      cout << "2. Tea $4.50" << endl;
      cout << "Please choose one(1-2): ";
      cin >> resp2;
      if(resp2 == 1){
        total = total + 5.00;
      }
      else if(resp2 == 2){
        total = total + 4.50;
      }else{
        cout << "----------------------------" << endl;
        cout << "Invalid input, please try again" << endl;
        
      }
    }else if(resp1 == 2){
      cout << "----------------------------" << endl;
      cout << "What would you like?" << endl;
      cout << "1. Bagels $3.00" << endl;
      cout << "2. Toast $2.50" << endl;
      cout << "Please choose one(1-2): ";
      cin >> resp2;
      if(resp2 == 1){
        total = total + 3.00;
      }
      else if(resp2 == 2){
        total = total + 2.50;
      }else{
        cout << "----------------------------" << endl;
        cout << "Invalid input, please try again" << endl;
        
      }
    }else if(resp1 == 3){
      cout << "----------------------------" << endl;
      cout << "What would you like?" << endl;
      cout << "1. Donuts $2.50" << endl;
      cout << "2. Muffins $2.50" << endl;
      cout << "3. Pastries $3.00" << endl;
      cout << "Please choose one(1-3): ";
      cin >> resp2;
      if(resp2 == 1){
        total = total + 2.50;
      }
      else if(resp2 == 2){
        total = total + 2.50;
      }
      else if(resp2 == 3){
        total = total + 3.00;
      }else{
        cout << "----------------------------" << endl;
        cout << "Invalid input, please try again" << endl;
        
      }
    }else if(resp1 == 4){
      order = false;
      cout << "----------------------------" << endl;
      cout << "Current total: $" << total << endl;;
      cout << "Would you like to tip?" << endl;
      cout << "----------------------------" << endl;
      cout << fixed << setprecision(2) << "1. 10% = $" << total * 0.10 << endl;
      cout << fixed << setprecision(2) << "2. 15% = $" << total * 0.15 << endl;
      cout << fixed << setprecision(2) << "3. 20% = $" << total * 0.20 << endl;
      cout << "4. Custom amount" << endl;
      cout << "5. No tip" << endl;
      cout << "Please choose one(1-5): ";
      cin >> resp3;
      if(resp3 == 1){
        total = total + total * 0.10;
      }else if(resp3 == 2){
        total = total + total * 0.15;
      }else if(resp3 == 3){
        total = total + total * 0.20;
      }else if(resp3 == 4){
        cout << "Enter custom tip amount: ";
        cin >> c_tip;
        if(c_tip > 0.00){
          total = total + c_tip;
        }else{
          cout << "Invalid amount, please try again" << endl;
          cout << "Enter custom tip amount: ";
          cin >> c_tip;
          total = total + c_tip;
        }
      }else if(resp3 == 5){
        total = total + 0.00;
      }
      break;
    }else{
      cout << "----------------------------" << endl;
      cout << "Invalid input, please try again" << endl;
      
    }
    
  }
  cout << "----------------------------" << endl;
  cout << fixed << setprecision(2)<< "Total: $" << total << endl;
  cout << "Thank you for your order" << endl;
  return 0;
}
