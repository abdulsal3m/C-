#include <iostream>
#include <string>

using namespace std;

int main() {

  string text;
  bool found = false;
  cout << "Welcome to the Text Decoder" << endl;
  cout << '\n' << "------------------------------------------------" << endl;
  cout << '\n' << "Please enter your text: ";
  getline(cin, text);

  

  cout << '\n' << "------------------------------------------------" << endl;


  cout << '\n' << "You entered: " << text << endl;
  if(text.find("BFF") != string::npos){
    found = true;
    cout << "BFF: Best Friends Forever" << endl;
  }

  if(text.find("JK") != string::npos){
    found = true;    
    cout << "JK: Just kidding" << endl;
  }

  if(text.find("IDK") != string::npos){
    found = true;
    cout << "IDK: I dont know" << endl;
  }

  if(text.find("TMI") != string:: npos){
    found = true;
    cout << "TMI: Too much for information" << endl;
  }

  if(text.find("TTYL") != string::npos){
    found = true;
    cout << "TTYL: Talk to you later" << endl;
  }

  if(text.find("GG") != string::npos){
    found = true;
    cout << "GG: Good game" << endl;
  }

  if(text.find("FR") != string::npos){
    found = true;
    cout << "FR: For real" << endl;
  }
  if(found != true){
    cout << "No abbreviations found" << endl;
  }
  /*if(text.find("BFF" || "JK" || "IDK" || "TMI" || "TTYL" || "GG" || "FR")){
    cout << '\n' << "You entered :" << text << endl;
    cout << '\n' << "No abbreviations found." << endl;
  
  }*/
  cout << '\n' << "------------------------------------------------" << endl;
  cout << '\n' << "Thank you for the using the Text Decoder" << endl;
  return 0;
}
